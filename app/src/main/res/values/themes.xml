<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat" />

    <!-- Typography -->
    <style name="CustomTextAppearance.TextBody">
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="CustomTextAppearance.TextBody.Bold">
        <item name="android:fontFamily">@font/urbanist_700</item>
    </style>

    <style name="CustomTextAppearance.TextBody.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="CustomTextAppearance.TextBody.Light.Bold">
        <item name="android:fontFamily">@font/urbanist_700</item>
    </style>

    <style name="CustomTextAppearance.TextBody.Link">
        <item name="android:textColor">@color/text_link</item>
        <item name="android:fontFamily">@font/urbanist_500</item>
    </style>

    <style name="CustomTextAppearance.TextSmall">
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="CustomTextAppearance.TextCaption">
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textColor">@color/text_caption</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="CustomTextAppearance.TextHeadline1">
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:textColor">@color/text_headline1</item>
        <item name="android:textSize">@dimen/text_headline1</item>
    </style>

    <style name="CustomTextAppearance.TextHeadline2">
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:textColor">@color/text_headline2</item>
        <item name="android:textSize">@dimen/text_headline2</item>
    </style>

    <style name="CustomTextAppearance.TextHeadline3">
        <item name="android:fontFamily">@font/urbanist_600</item>
        <item name="android:textColor">@color/text_headline3</item>
        <item name="android:textSize">@dimen/text_headline3</item>
    </style>


    <style name="CustomTextAppearance.TextHeadline4">
        <item name="android:fontFamily">@font/urbanist_500</item>
        <item name="android:textColor">@color/text_headline4</item>
        <item name="android:textSize">@dimen/text_headline4</item>
    </style>

    <!-- Buttons -->
    <style name="CustomTextAppearance.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/urbanist_600</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary">
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.Rounded">
        <item name="android:layout_height">@dimen/button_rounded_size</item>
        <item name="android:layout_width">@dimen/button_rounded_size</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.Rounded.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary">
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius">12dp</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.Rounded">
        <item name="android:layout_height">@dimen/button_rounded_size</item>
        <item name="android:layout_width">@dimen/button_rounded_size</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.Rounded.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Divider -->
    <style name="CustomTextAppearance.Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- Edit Text-->
    <style name="CustomTextAppearance.EditText">
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>
</resources>