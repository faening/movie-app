<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat" />

    <!-- Typography -->
    <style name="CustomTextAppearance.TextBody">
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="CustomTextAppearance.TextBody.Bold">
        <item name="android:fontFamily">@font/urbanist_700</item>
    </style>

    <style name="CustomTextAppearance.TextBody.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="CustomTextAppearance.TextBody.Light.Bold">
        <item name="android:fontFamily">@font/urbanist_700</item>
    </style>

    <style name="CustomTextAppearance.TextBody.Link">
        <item name="android:textColor">@color/text_link</item>
        <item name="android:fontFamily">@font/urbanist_500</item>
    </style>

    <style name="CustomTextAppearance.TextSmall">
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textColor">@color/text_body</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="CustomTextAppearance.TextCaption">
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textColor">@color/text_caption</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="CustomTextAppearance.TextHeadline1">
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:textColor">@color/text_headline1</item>
        <item name="android:textSize">@dimen/text_headline1</item>
    </style>

    <style name="CustomTextAppearance.TextHeadline2">
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:textColor">@color/text_headline2</item>
        <item name="android:textSize">@dimen/text_headline2</item>
    </style>

    <style name="CustomTextAppearance.TextHeadline3">
        <item name="android:fontFamily">@font/urbanist_600</item>
        <item name="android:textColor">@color/text_headline3</item>
        <item name="android:textSize">@dimen/text_headline3</item>
    </style>


    <style name="CustomTextAppearance.TextHeadline4">
        <item name="android:fontFamily">@font/urbanist_500</item>
        <item name="android:textColor">@color/text_headline4</item>
        <item name="android:textSize">@dimen/text_headline4</item>
    </style>

    <!-- Buttons -->
    <style name="CustomTextAppearance.Button">
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/urbanist_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary">
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_icon_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/button_primary_text</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.Smash">
        <item name="android:layout_height">@dimen/button_smash_height</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.Smash.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.Rounded">
        <item name="android:layout_height">@dimen/button_rounded_size</item>
        <item name="android:layout_width">@dimen/button_rounded_size</item>
    </style>

    <style name="CustomTextAppearance.Button.Primary.Rounded.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary">
        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_icon_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.Smash">
        <item name="android:layout_height">@dimen/button_smash_height</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.Smash.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.Rounded">
        <item name="android:layout_height">@dimen/button_rounded_size</item>
        <item name="android:layout_width">@dimen/button_rounded_size</item>
    </style>

    <style name="CustomTextAppearance.Button.Secondary.Rounded.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Tertiary">
        <item name="android:textColor">@color/button_tertiary_text</item>
        <item name="android:background">@drawable/bg_button_tertiary</item>
    </style>

    <style name="CustomTextAppearance.Button.Tertiary.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_icon_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Tertiary.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/button_tertiary_text</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <style name="CustomTextAppearance.Button.Tertiary.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Tertiary.Smash">
        <item name="android:layout_height">@dimen/button_smash_height</item>
    </style>

    <style name="CustomTextAppearance.Button.Tertiary.Smash.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomTextAppearance.Button.Tertiary.Rounded">
        <item name="android:layout_height">@dimen/button_rounded_size</item>
        <item name="android:layout_width">@dimen/button_rounded_size</item>
    </style>

    <style name="CustomTextAppearance.Button.Tertiary.Rounded.WithElevation">
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Pill -->
    <style name="CustomTextAppearance.Pill">
        <item name="android:paddingVertical" tools:targetApi="o">2dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/padding_small</item>
        <item name="android:fontFamily">@font/urbanist_500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_height">@dimen/pill_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CustomTextAppearance.Pill.Primary">
        <item name="android:textColor">@color/pill_primary_text</item>
        <item name="android:background">@drawable/bg_pill_primary</item>
    </style>

    <style name="CustomTextAppearance.Pill.Secondary">
        <item name="android:textColor">@color/pill_secondary_text</item>
        <item name="android:background">@drawable/bg_pill_secondary</item>
    </style>

    <style name="CustomTextAppearance.Pill.Tertiary">
        <item name="android:textColor">@color/pill_tertiary_text</item>
        <item name="android:background">@drawable/bg_pill_tertiary</item>
    </style>

    <!-- Divider -->
    <style name="CustomTextAppearance.Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- Edit Text-->
    <style name="CustomTextAppearance.EditText">
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <!-- Simple Search View -->
    <style name="CustomTextAppearance.ThemeToolbarSimpleSearchView">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CustomTextAppearance.ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_headline4</item>
        <item name="android:fontFamily">@font/urbanist_500</item>
    </style>

    <style name="CustomTextAppearance.SearchViewTheme">
        <item name="colorSecondary">@color/red</item>
        <item name="searchBackground">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="hintColor">@color/black_200</item>
        <item name="backIconTint">@color/red</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconsTint">@color/black</item>
    </style>
</resources>