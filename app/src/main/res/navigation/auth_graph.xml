<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.github.faening.movieapp.presentation.onboarding.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_onboardingFragment_to_navigation"
            app:destination="@id/autentication" />
    </fragment>
    <navigation android:id="@+id/autentication"
        app:startDestination="@id/homeAuthFragment">
        <fragment
            android:id="@+id/homeAuthFragment"
            android:name="com.github.faening.movieapp.presentation.auth.home_auth.HomeAuthFragment"
            android:label="fragment_home_auth"
            tools:layout="@layout/fragment_home_auth" >
            <action
                android:id="@+id/action_homeAuthFragment_to_signInFragment"
                app:destination="@id/signInFragment" />
            <action
                android:id="@+id/action_homeAuthFragment_to_signUpFragment"
                app:destination="@id/signUpFragment" />
        </fragment>
        <fragment
            android:id="@+id/signUpFragment"
            android:name="com.github.faening.movieapp.presentation.auth.sign_up.SignUpFragment"
            android:label="fragment_sign_up"
            tools:layout="@layout/fragment_sign_up" />
        <fragment
            android:id="@+id/signInFragment"
            android:name="com.github.faening.movieapp.presentation.auth.sign_in.SignInFragment"
            android:label="fragment_sign_in"
            tools:layout="@layout/fragment_sign_in" >
            <action
                android:id="@+id/action_signInFragment_to_forgotPasswordFragment"
                app:destination="@id/forgotPasswordFragment" />
        </fragment>
        <fragment
            android:id="@+id/forgotPasswordFragment"
            android:name="com.github.faening.movieapp.presentation.auth.forgot_password.ForgotPasswordFragment"
            android:label="fragment_forgot_password"
            tools:layout="@layout/fragment_forgot_password" />
    </navigation>
</navigation>